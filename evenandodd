#include<stdio.h>
int main()
{
	int i,j=0,k=0;
	int n;
	int a1[10],a2[10],a3[10];
	printf("enter the size: ");
	scanf("%d",&n);
	printf("enter the elements: ");
	for(i=0;i<n;i++)
	{
		scanf("%d",&a1[i]);
	}
	for(i=0;i<n;i++)
	{
		if(a1[i]%2==0)
		{
			a2[j]=a1[i];
			j++;
		}
		else
		{
		a3[k]=a1[i];
		k++;
	}
	}
	printf("even elements: ");
	for(i=0;i<j;i++)
	{
		printf("\t%d",a2[i]);
	}
	printf("\nodd elements: ");
	for(i=0;i<k;i++)
	{
		printf("\t%d",a3[i]);
	}
	printf("\n\n");
}
