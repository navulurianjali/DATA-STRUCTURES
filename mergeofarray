#include<stdio.h>
int main()
{
	int const m=100;
	int a[m],b[m],c[m];
	int n1,n2,n3;
	int i;
	printf("enter the size of 1st array: ");
	scanf("%d",&n1);
	printf("enter the elemnts of array: ");
	for( i=0;i<n1;i++)
	{
		scanf("%d",&a[i]);
	}
	printf("enter the size of 2nd array: ");
	scanf("%d",&n2);
		printf("enter the elemnts of array: ");
	for( i=0;i<n2;i++)
	{
		scanf("%d",&b[i]);
	}
	n3=n1+n2;
for( i=0;i<n1;i++)
{
	c[i]=a[i];
	}
		for( i=0;i<n2;i++)	
		{
			c[n1+i]=b[i];
		}
		printf("the merged array is: ");
		for( i=0;i<n3;i++)
		{
			printf("%d\n",c[i]);
		}
}
